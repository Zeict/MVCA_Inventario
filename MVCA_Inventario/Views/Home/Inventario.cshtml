
@{
    ViewBag.Title = "Inventario";
}



<div class="row" style="padding-top:2%">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-action">
                <b>Detalles de Inventario.</b>
            </div>

        </div>
        <button class="btn btn-primary pull-right" data-toggle="modal" data-target="#AddModal" ng-click="clearModel()">Agregar Producto</button>
    </div>

</div>

<hr />
<br />

<div class="alert alert-success" ng-if="message">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
    {{message}}
</div>

<div id="page-inner">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-action">
                    Productos Registrados
                </div>
                <div class="card-content">
                    <div class="table-responsive">
                        <table id="tbAlumnosRegistrados" class="table table-striped table-bordered display nowrap" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Edad</th>
                                    <th>Compañía</th>
                                    <th>Precio</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="d in product">
                                    <td>{{ d.ID }}</td>
                                    <td>{{ d.Name }}</td>
                                    <td>{{ d.Description }}</td>
                                    <td>{{ d.Restriction }}</td>
                                    <td>{{ d.Company }}</td>
                                    <td>{{ d.Price }}</td>
                                    <td><button class="btn btn-info" data-toggle="modal" data-target="#EditModal" ng-click="selectProduct(d)">Editar</button></td>
                                    <td><button class="btn btn-danger" ng-click="deleteProduct(d)">Eliminar</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="clearBoth"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="modal fade" id="AddModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form name="employee_form" data-ng-submit="addProduct()">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Agregar Detalles del Producto</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nombre:</label>
                        <input type="text" class="form-control" id="name" aria-describedby="emailHelp" ng-model="model.Name" required="required">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Descripción:</label>
                        <input type="text" class="form-control" id="description" aria-describedby="emailHelp" ng-model="model.Description">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Edad:</label>
                        <input type="text" class="form-control" id="restriction" aria-describedby="emailHelp" ng-model="model.Restriction">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Compañía:</label>
                        <input type="text" class="form-control" id="restriction" aria-describedby="emailHelp" ng-model="model.Company" required="required">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Precio:</label>
                        <input type="number" class="form-control" id="price" aria-describedby="emailHelp" ng-model="model.Price" required="required">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-default pull-left">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>

    </div>
</div>

<div class="modal fade" id="EditModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form name="employee_form" data-ng-submit="updateProduct()">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Actualizar datos del producto</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nombre:</label>
                        <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Nombre del producto" ng-model="selectedProduct.Name" required="required">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Descripción:</label>
                        <input type="text" class="form-control" id="description" aria-describedby="emailHelp" placeholder="Descripcion del producto" ng-model="selectedProduct.Description">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Edad:</label>
                        <input type="text" class="form-control" id="restriction" aria-describedby="emailHelp" placeholder="Edad" ng-model="selectedProduct.Restriction">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Compañía:</label>
                        <input type="text" class="form-control" id="restriction" aria-describedby="emailHelp" placeholder="Compañía" ng-model="selectedProduct.Company" required="required">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Precio:</label>
                        <input type="number" class="form-control" id="price" aria-describedby="emailHelp" placeholder="Precio" ng-model="selectedProduct.Price" required="required">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary pull-left">Guardar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>

    </div>
</div>